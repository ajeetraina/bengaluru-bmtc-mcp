# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/bmtc-mcp

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# BMTC API Configuration
BMTC_API_BASE_URL=https://api.bmtc.karnataka.gov.in
BMTC_API_KEY=your-api-key
BMTC_API_HEALTH_ENDPOINT=https://api.bmtc.karnataka.gov.in/health
BMTC_API_STOPS_ENDPOINT=https://api.bmtc.karnataka.gov.in/v1/stops
BMTC_API_ROUTES_ENDPOINT=https://api.bmtc.karnataka.gov.in/v1/routes
BMTC_API_BUSES_ENDPOINT=https://api.bmtc.karnataka.gov.in/v1/buses
BMTC_API_GPS_ENDPOINT=https://api.bmtc.karnataka.gov.in/v1/gps

# BMTC Schedule Database Configuration
BMTC_SCHEDULE_DB_URI=mongodb://localhost:27017/bmtc-schedule

# Data Directories
RAW_DATA_DIR=./data/raw
PROCESSED_DATA_DIR=./data/processed
GTFS_DATA_DIR=./data/gtfs
LOGS_DIR=./logs

# JWT Configuration
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=7d

# Developer Portal Configuration
DEVELOPER_PORTAL_ENABLED=true
API_KEY_REQUEST_ENABLED=true

# GTFS Configuration
GTFS_AGENCY_ID=BMTC
GTFS_AGENCY_NAME=Bangalore Metropolitan Transport Corporation
GTFS_AGENCY_URL=https://mybmtc.karnataka.gov.in
GTFS_TIMEZONE=Asia/Kolkata
